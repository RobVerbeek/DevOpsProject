@using Contentful.Core.Models;
@model ContentfulCollection<Routine>

@{
    ViewData["Title"] = "Routines";
}
<h1 class="text-center p-5" id="heading">Routines</h1>
<div class="accordion accordion-flush" id="accordionFlush-example">
    @foreach (var Routine in Model)
    {
        <div class="accordion-item p-3">
            <h2 class="accordion-header" id="flush-heading-@Routine.Sys.Id">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@Routine.Sys.Id" aria-expanded="false" aria-controls="flush-collapse-@Routine.Sys.Id">
                    <h2>@Routine.RoutineName</h2>
                </button>
            </h2>
            <div id="flush-collapse-@Routine.Sys.Id" class="accordion-collapse collapse" aria-labelledby="flush-heading-@Routine.Sys.Id" data-bs-parent="#accordionFlush-example">
                <div class="accordion-body row">
                    <img src="@Routine.RoutineImage.File.Url" class="col-3"/>
                    <ul class="col-9">
                        <li>
                            <div class="row">
                                <h3 class="col-3">Exercise</h3>
                                <h3 class="col-3">Sets</h3>
                                <h3 class="col-3">Repetitions</h3>
                                <h3 class="col-3">Weight(Kg)</h3>
                            </div>
                        </li>
                    @foreach (var Exercise in Routine.Exercises)
                    {
                        <li>
                            <div class="row">
                                <h5 class="col-3">@Exercise.ExerciseName</h5>
                                <h5 class="col-3">@Exercise.Sets</h5>
                                <h5 class="col-3">@Exercise.Repetitions</h5>
                                <h5 class="col-3">@Exercise.Weight</h5>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
        }
</div>



